--- 
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		Version: {Astro.generator}, Cloudflare adapter v7.7.0
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-size: 48px;
	}
	span {
		font-size: 0.325rem;
	}
</style>
